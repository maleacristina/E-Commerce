@*@model dynamic*@

@{
    ViewBag.Title = "CartSummary";
}

@if ((User.IsInRole("Admin")) == false)
{
    <a href="@Url.Action("Index", "ShoppingCart", new {id = "cart-status"})">

        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"><span class="badge">@ViewData["CartCount"]</span></span>
    </a>
}