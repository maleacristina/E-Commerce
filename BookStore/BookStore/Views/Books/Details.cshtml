@model BookStore.Models.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <dl class="dl-horizontal">

        <dd class="image">
            <img src='/Images/@Model.ImagePath' width="180" height="250"/>

        </dd>
        <dd class="title">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="description">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class="price">
            Pret
            @Html.DisplayFor(model => model.Price) lei
        </dd>
        <dd>
            @Html.ActionLink("Adauga in cos", "AddToCart", "ShoppingCart", new { id = @Model.BookId }, new { @class = "btn btn-primary" })
        </dd>
    </dl>
</div>
