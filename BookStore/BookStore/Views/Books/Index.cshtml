@model IEnumerable<BookStore.Models.Book>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<div>
    @using (Html.BeginForm("Index", "Books", FormMethod.Get))
        {
        <b> Search by:</b>
             @Html.RadioButton("searchBy", "Name", true) <text>Book</text>
             @Html.RadioButton("searchBy", "Author") <text>Author</text>
             <br/>
             @Html.TextBox("search") <input type = "submit" value = "Search" class="btn"/>
         }
</div>
@if (Model.Count() == 0)
{
<p>Sorry, there are no products according to the selected filters.</p>
}
else
{


    <ul class="display-book">
        @foreach (var book in Model)
        {
            <li>
                <a href="@Url.Action("Details",
                             new {id = book.BookId})">
                    <img src='/Images/@book.ImagePath' width="200" height="290" /><br />
                    <span>@book.Name</span>
                </a>
            </li>

        }
    </ul>
}
